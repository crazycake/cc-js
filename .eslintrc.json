{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"node"   : true,
		"es6"    : true
	},
	"globals": {
		"APP"      : false,
		"jQuery"   : false,
		"$"        : false,
		"_"        : false,
		"Vue"      : false,
		"loadCSS"  : false,
		"FastClick": false,
		"cc"       : true
	},
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"no-console": 0,
		"no-mixed-spaces-and-tabs": 0,
		"linebreak-style": ["error", "unix"],
		"semi": ["warn", "always"]
	}
}
