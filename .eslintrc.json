{
	"extends": "eslint:recommended",
	"env": {
		"browser" : true,
		"node"    : true,
		"es6"     : true
	},
	"globals": {
		"APP"       : false,
		"$"         : false,
		"jQuery"    : false,
		"_"         : false,
		"Vue"       : false,
		"loadCSS"   : false,
		"FastClick" : false,
		"FB"        : false,
		"P"         : false,
		"cc"        : true
	},
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"no-console": 0,
		"no-mixed-spaces-and-tabs": 0,
		"linebreak-style": [
			"error",
			"unix"
		],
		"semi": [
			"warn",
			"always"
		]
	}
}
